.reasons-section
  // background-image: url('../images/reasons-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(180deg, #010104 0%, #0d0e10 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      padding 98px 0 98px 0

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 5px 0 20px 0
    +above($breakpoints.sm)
      padding 15px 0 30px 0
    +above($breakpoints.md)
      padding 20px 0 60px 0
    +above($breakpoints.xxl)
      padding 20px 0 90px 0

  &__cards
    +above($breakpoints.sm)
      width 550px
      display: flex
      flex-wrap: wrap
      gap: 10px
      margin-left 175px
    +above($breakpoints.md)
      width 780px
      gap: 20px
      margin-left 315px
    +above($breakpoints.xxl)
      margin-left 394px

  &__card
    width 280px !important
    height: 190px
    padding 15px 10px
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    border-radius: 10px
    background-color #282828
    +above($breakpoints.sm)
      padding 20px 10px 15px 20px
      width: 270px !important;
      height: 225px;
      align-items: flex-start
      text-align: start
    +above($breakpoints.md)
      padding 25px 10px 20px 25px
      width: 315px !important;
      height: 270px;
    +above($breakpoints.xxl)
      padding 34px 10px 25px 30px
      width 380px !important
      height: 315px

  &__card-num
    display: flex
    justify-content center
    align-items: center
    border-radius: 50px
    background-color $color-red
    width 35px
    height: 35px
    +above($breakpoints.sm)
      width 45px
      height: 45px
    +above($breakpoints.md)
      width 50px
      height: 50px
    +above($breakpoints.xxl)
      width 59px
      height: 59px

  &__card-title
    padding 15px 0 10px 0
    +above($breakpoints.sm)
      padding 20px 0 10px 0
    +above($breakpoints.md)
      padding 25px 0 12px 0
    +above($breakpoints.xxl)
      padding 30px 0 12px 0

  &__bottom
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      margin-top 50px
    +above($breakpoints.md)
      margin-top 70px
    +above($breakpoints.xxl)
      margin-top 90px

  &__bottom-text
    padding 10px 0 90px 0
    +above($breakpoints.sm)
      padding 10px 0 25px 0
    +above($breakpoints.md)
      padding 10px 0 30px 0
    +above($breakpoints.xxl)
      padding 10px 0 37px 0

  &__btn
    width 280px !important
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      width 290px
    +above($breakpoints.md)
      width 300px
    +above($breakpoints.xxl)
      width 311px

  &__img
    width 300px
    height: auto
    margin: 0 0 0 12px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 600px;
      top: 134px;
      left: -223px;
    +above($breakpoints.md)
      width: 977px;
      top: 107px;
      left: -327px;
    +above($breakpoints.xxl)
      width 1170px
      top: 172px
      left: -376px

  &__bottom-img
    position: absolute
    z-index -1
    width: 200px;
    height: auto;
    bottom: 296px;
    right: -6px;
    +above($breakpoints.sm)
      width: 537px;
      bottom: 0;
      right: -104px;
    +above($breakpoints.md)
      width 694px
      bottom: 0
      right -120px
    +above($breakpoints.xxl)
      width 894px
      bottom: 0
      right -144px

.reasons-card-order-2
  +above($breakpoints.sm)
    order: 2
.reasons-card-order-3
  +above($breakpoints.sm)
    order: 3
.reasons-card-order-4
  +above($breakpoints.sm)
    order: 4
