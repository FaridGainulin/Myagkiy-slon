.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    display: none
    +above($breakpoints.sm)
      flex-basis: 33%
      display: flex
      flex-direction: column
      gap: 4px

  &__logo
    width 110px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 130px
    +above($breakpoints.xxl)
      width 152px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      justify-content flex-end
      flex-basis: 33%
      gap: 10px
    +above($breakpoints.md)
      gap: 13px
    +above($breakpoints.xxl)
      gap: 16px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
