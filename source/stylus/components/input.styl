.input
  height: 45px
  width 100%
  padding: 0 30px;
  font-family: 'Onest-Light'
  font-weight: 300
  font-size: 14px;
  line-height: 120%
  color: #7E7E7E
  border: 1px solid #C9C9C9
  border-radius: 32px;
  background: #fff
  position relative
  overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: linear-gradient(90deg, #f68a0e 0%, #ffab07 100%);
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #fff
    font-weight: bold
    border-radius: 100px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #F68A0E
  &:focus
    color: #17296D
    caret-color: #17296D
    border 1px solid #F68A0E
    box-shadow: 3px 3px 20px 0px #F68A0E
    background: #fff
    &::placeholder
      color: #7E7E7E
  &::placeholder
    color: #7E7E7E
  +above($breakpoints.sm)
    height: 50px
    font-size: 14px;
  +above($breakpoints.md)
    height: 55px
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 64px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

