.support-section
  // background-image: url('../images/support-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(180deg, #f7f9fd 0%, #c8cfdf 100%);

  &__container
    position relative
    z-index 1
    padding 30px 0 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 60px 0
    +above($breakpoints.md)
      padding 70px 0 90px 0
    +above($breakpoints.xxl)
      padding 118px 0 160px 0

  &__title
    padding 0 0 10px 0
    +above($breakpoints.md)
      padding 0 0 14px 0

  &__text
    padding 10px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0 28px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 8px

  &__img
    width 280px
    height: auto
    margin: 5px 0 0 35px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 411px;
      bottom: 20px;
      right: -72px;
    +above($breakpoints.md)
      width: 528px;
      bottom: 30px;
      right: -60px;
    +above($breakpoints.xxl)
      width 714px
      bottom: 51px
      right: -137px

  &__icon
    position: absolute
    width: 90px;
    height: auto;
    bottom: 171px;
    left: -11px;
    transform: rotate(85deg);
    +above($breakpoints.sm)
      transform: none
      width: 80px;
      bottom: 73px;
      left: 334px;
    +above($breakpoints.md)
      width: 120px;
      bottom: 94px;
      left: 391px;
    +above($breakpoints.xxl)
      width 149px
      bottom: 166px
      left: 456px

.input-city-position
  margin-left: -31px;
  margin-top: -1px;

.support-item
  width 280px !important
  +above($breakpoints.sm)
    width 300px !important
  +above($breakpoints.md)
    width 340px !important
  +above($breakpoints.xxl)
    width 388px !important
