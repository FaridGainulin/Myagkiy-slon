.footer
  background-color #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 10px 0
    +above($breakpoints.sm)
      padding 8px 0
      flex-direction: row
      justify-content space-between

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 80px
    +above($breakpoints.md)
      width 90px
    +above($breakpoints.xxl)
      width 108px

  &__block
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline
    color: $color-sea

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      justify-content flex-end
      gap: 10px
    +above($breakpoints.md)
      gap: 13px
    +above($breakpoints.xxl)
      gap: 16px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
