.start-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(180deg, #c8cfdf 0%, #f7f9fd 100%);

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 126px 0 126px 0

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 10px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 30px 0
    +above($breakpoints.md)
      padding 20px 0 40px 0
    +above($breakpoints.xxl)
      padding 26px 0 70px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px 20px

  &__card
    width 280px !important
    height: 70px
    border-radius: 10px;
    backdrop-filter: blur(40px);
    background-color #F7F9FD
    display: flex
    align-items: center
    justify-content center
    gap: 10px
    +above($breakpoints.sm)
      gap: 15px
      justify-content start
      width 235px !important
      height: 80px
      padding-left 10px
    +above($breakpoints.md)
      gap: 20px
      width 308px !important
      height: 90px
      padding-left 25px
    +above($breakpoints.xxl)
      gap: 27px
      width 380px !important
      height: 106px
      padding-left 28px

  &__card-icon
    width 40px
    height: 40px
    +above($breakpoints.sm)
      width 45px
      height: 45px
    +above($breakpoints.md)
      width 50px
      height: 50px
    +above($breakpoints.xxl)
      width 61px
      height: 61px

  &__bottom-title
    text-align: center
    padding 5px 0 10px 0
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0 20px 0
    +above($breakpoints.md)
      padding 50px 0 20px 0
    +above($breakpoints.xxl)
      padding 71px 0 27px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      gap: 8px
      width 610px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 260px !important
      +above($breakpoints.xxl)
        width 299px !important

  &__agree-wrapper
    color: #999999
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 30px

  &__img
    width 280px
    height: auto
    margin 10px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 615px;
      bottom: 0;
      right: -309px;
    +above($breakpoints.md)
      width: 916px;
      right: -471px;
    +above($breakpoints.xxl)
      width 1300px
      bottom: -14px
      right: -726px
